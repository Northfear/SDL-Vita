# Makefile to build the SDL library

INCLUDE = -I./include
CFLAGS  = -Ofast -mcpu=cortex-a9 -mfpu=neon -ftree-vectorize -fgraphite-identity -floop-nest-optimize \
-D__VITA__ $(INCLUDE) -lSceLibc_stub -Werror \
-Dmemcpy=sceClibMemcpy -Dmemset=sceClibMemset -Dmemmove=sceClibMemmove -Dmemcmp=sceClibMemcmp \
-flto=jobserver -ffat-lto-objects

CC	= arm-vita-eabi-gcc
AR	= arm-vita-eabi-gcc-ar
RANLIB	= arm-vita-eabi-gcc-ranlib

CONFIG_H = include/SDL_config.h
TARGET  = libSDL.a
SOURCES = \
	src/*.c \
	src/audio/*.c \
	src/cdrom/*.c \
	src/cpuinfo/*.c \
	src/events/*.c \
	src/file/*.c \
	src/joystick/*.c \
	src/stdlib/*.c \
	src/thread/*.c \
	src/timer/*.c \
	src/video/*.c \
	src/audio/psp2/*.c \
	src/video/psp2/*.c \
	src/joystick/psp2/*.c \
	src/cdrom/dummy/*.c \
	src/thread/psp2/*.c \
	src/timer/psp2/*.c \
	src/loadso/dummy/*.c \
	src/video/arm/*.S \

OBJECTS = $(shell echo $(SOURCES) | sed -e 's,\.c,\.o,g; s,\.S,\.o,g')

$(TARGET): $(CONFIG_H) $(OBJECTS)
	$(AR) crv $@ $^
	$(RANLIB) $@

$(CONFIG_H):
	cp $(CONFIG_H).default $(CONFIG_H)

clean:
	rm -f $(TARGET) $(OBJECTS)

install: $(TARGET)
	@cp  $(TARGET) $(VITASDK)/arm-vita-eabi/lib
	@mkdir -p "$(VITASDK)/arm-vita-eabi/include/SDL"
	@cp include/*.h "$(VITASDK)/arm-vita-eabi/include/SDL"
	@echo "Installed!"
